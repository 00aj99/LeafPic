<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setting_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--
    TOOLBAR
    -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:background="@color/toolbar"
        android:windowActionBarOverlay="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--
            GENERAL
            -->
            <android.support.v7.widget.CardView
                android:id="@+id/general_setting_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/general_setting_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/general"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                        <!--COLAPS TOOLBAR BAR-->
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/ll_switch_CollapsingToolBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:id="@+id/collapsing_toolbar_Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="15dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="15dp"
                                android:src="@mipmap/ic_gradient_black_24dp"
                                />
                            <TextView
                                android:id="@+id/collapsing_toolbar_Item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="15dp"
                                android:paddingTop="15dp"
                                android:text="@string/collapsing_toolbar"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"

                                />
                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/SetCollapsingToolbar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?android:selectableItemBackground"
                                android:button="@null"
                                android:hapticFeedbackEnabled="true"
                                android:paddingBottom="15dp"
                                android:paddingRight="20dp"
                                android:paddingTop="15dp"
                                />
                        </LinearLayout>

                    <!-- TRASLUCENT STATUS BAR-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_TraslucentStatusBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/Traslucent_StatusBar_Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:src="@mipmap/ic_status_bar_black_24dp"
                            />
                        <TextView
                            android:id="@+id/Traslucent_StatusBar_Item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="@string/traslucent_statusbar"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"
                            />
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/SetTraslucentStatusBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--
            PICTURE SETTING
            -->
            <android.support.v7.widget.CardView
                android:id="@+id/preview_picture_setting_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/picture_setting_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/picture_preview"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_max_luminosita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ll_switch_max_luminosita_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:src="@mipmap/ic_brightness_high_black_24dp" />

                        <TextView
                            android:id="@+id/max_luminosita_Item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="@string/max_brightness"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"

                            />
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/set_max_luminosita"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp" />
                    </LinearLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_picture_orientation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ll_switch_picture_orientation_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:src="@mipmap/ic_screen_rotation_black_24dp" />

                        <TextView
                            android:id="@+id/picture_orientation_Item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="@string/picture_orientation"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"

                            />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/set_picture_orientation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp" />
                    </LinearLayout>


                     <!-- APPLY THEME ON 3TH ACT -->
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_apply_theme_3thAct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/ll_apply_theme_3thAct_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:src="@mipmap/ic_brush_black_24dp" />

                        <TextView
                            android:id="@+id/apply_theme_3thAct_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="Apply Theme"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"
                            />

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/apply_theme_3th_act_enabled"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp" />

                    </LinearLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_seek_bar_alpha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/seek_bar_alpha_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="15dp"
                            android:text="Transparency:"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:id="@+id/seek_bar_alpha_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:text="100%"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"
                            />

                    </LinearLayout>

                    <!-- ALPHA SEEKBAR -->
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_seek_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        >
                        <SeekBar
                            android:id="@+id/seek_bar_alpha"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="255"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!--THEME-->
            <android.support.v7.widget.CardView
                android:id="@+id/theme_setting_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/theme_setting_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"

                        android:paddingTop="15dp"
                        android:text="@string/theme"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <!--PRIMARY COLOR-->
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:mrl_rippleAlpha="0.05"
                        app:mrl_rippleDelayClick="false"
                        >
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/ll_primaryColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:id="@+id/PrimaryColor_Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="15dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingTop="15dp"
                                android:src="@mipmap/ic_color_lens_black_24dp"
                                />
                            <TextView
                                android:id="@+id/PrimaryColor_Item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="15dp"
                                android:paddingTop="15dp"
                                android:text="@string/primary_color"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                        </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <!--ACCENT COLOR-->
                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:mrl_rippleAlpha="0.05"
                        app:mrl_rippleDelayClick="false">
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_accentColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/accentColor_Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:src="@mipmap/ic_colorize_black_24dp"
                            />
                        <TextView
                            android:id="@+id/accentColor_Item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="@string/accent_color"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <!--DARK THEME-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_DarkTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/DarkTheme_Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:src="@mipmap/ic_invert_colors_black_24dp"
                            />
                        <TextView
                            android:id="@+id/DarkTheme_Item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="@string/dark_theme"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"
                            />
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/SetDarkTheme"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            />
                    </LinearLayout>
                    <!--COLORED NAV BAR-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_switch_ColoredNavBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/NavBar_Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:src="@mipmap/ic_video_label_black_24dp"
                            />
                        <TextView
                            android:id="@+id/NavBar_Item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:text="@string/Colored_NavBar"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"
                            />
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/SetColoredNavBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:selectableItemBackground"
                            android:button="@null"
                            android:hapticFeedbackEnabled="true"
                            android:paddingBottom="15dp"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>