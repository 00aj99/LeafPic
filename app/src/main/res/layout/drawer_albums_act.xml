<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DrawerMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:clickable="true"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/Drawer_Header"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:clickable="true"
        android:elevation="8dp"
        >
        <!--
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/LeafPic"
             android:text="LeafPic"
             android:gravity="center"
             android:textStyle="bold|italic"
             android:textSize="50sp"
             android:textColor="@color/md_white_1000"
             />
         -->
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:src="@drawable/leafpic_big"
             />
            <!--android:scaleType="centerCrop"-->

    </RelativeLayout>
    <!--TODO: FIX THE LITTLE GRADIENT SHADOW-->
    <View
        android:id="@+id/Drawer_Divider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <ScrollView
        android:id="@+id/Drawer_Body_Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/Drawer_Body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical"
            >

            <!-- DEFAULT ALBUMS -->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.05"
                app:mrl_rippleDelayClick="false"
                >
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_drawer_Default"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/Drawer_Default_Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/ic_image_black_24dp"
                        />
                    <TextView
                        android:id="@+id/Drawer_Default_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/local_folders"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <!-- SECRETS ALBUMS -->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.05"
                app:mrl_rippleDelayClick="false">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_drawer_Hidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/Drawer_Hidden_Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/ic_visibility_off_black_24dp"
                        />
                    <TextView
                        android:id="@+id/Drawer_Hidden_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Hidden Albums"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <!-- MOMENTS -->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.05"
                app:mrl_rippleDelayClick="false">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_drawer_Moments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/Drawer_Moments_Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/ic_event_available_black_24dp"
                        />
                    <TextView
                        android:id="@+id/Drawer_Moments_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Moments"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <!-- MAP -->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.05"
                app:mrl_rippleDelayClick="false">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_drawer_Map"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/Drawer_Map_Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/ic_location_on_black_24dp"
                        />
                    <TextView
                        android:id="@+id/Drawer_Map_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Map"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <!--TODO: FIX THE LITTLE GRADIENT SHADOW-->
            <View
                android:id="@+id/Drawer_Body_Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="5dp"

                />

            <!-- SETTING -->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.05"
                app:mrl_rippleDelayClick="false">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_drawer_Setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/Drawer_Setting_Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/ic_settings_black_24dp"
                        />
                    <TextView
                        android:id="@+id/Drawer_Setting_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="Settings"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <!--DONATE-->
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleAlpha="0.05"
                app:mrl_rippleDelayClick="false">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_drawer_Donate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/Drawer_Donate_Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:src="@mipmap/ic_card_giftcard_black_24dp"
                        />
                    <TextView
                        android:id="@+id/Drawer_Donate_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="Donate"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        />
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>