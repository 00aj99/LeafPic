<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/protect_hidden_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--TITLE-->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ll_protect_hidden_title_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:weightSum="10"
                >

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="8"
                    >
                    <TextView
                        android:id="@+id/protect_hidden_title_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/protect_hidden"
                        android:textColor="@color/md_dark_primary_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/protect_hidden_title_icon_dialog"
                    android:layout_height="20dp"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:layout_weight="2"
                    app:iiv_icon="gmd-vpn-key"
                    app:iiv_color="@color/md_white_1000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--VERTICAL-->
                <!--
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_affix_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="15dp"
                    android:weightSum="10">
                    <com.mikepenz.iconics.view.IconicsImageView
                        android:id="@+id/affix_vertical_icon"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        app:iiv_icon="gmd-vpn-key" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/affix_vertical_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/protect_hidden_messagge"
                            android:textColor="@color/md_dark_background"
                            android:textSize="16sp"
                            />
                    </LinearLayout>


                </LinearLayout>
                -->
                <Button
                    android:id="@+id/protect_hidden_clear_password_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="@string/clear_password"
                    />
                <TextView
                    android:id="@+id/protect_hidden_message_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/protect_hidden_messagge"
                    android:textColor="@color/md_dark_background"
                    android:textSize="16sp"
                    android:padding="20dp"
                    />
                <EditText
                    android:id="@+id/protect_hidden_edit_txt"
                    android:layout_weight="2"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:hint="Password"
                    android:singleLine="true"
                    android:inputType="numberPassword" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>